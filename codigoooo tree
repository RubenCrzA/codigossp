                tabla += '<th class="estiloTabla" style="color: '+color+'">'+item.gestionRof+'</th>';
                tabla += '</tr>';
            });
        } else {
            tabla += '<tr class="text-center">';
            tabla += '<td colspan="15">No existe informaci&oacute;n para mostrar</td>';
            tabla += '</tr>';
        }

        tabla += '</tbody>';
        tabla += '</table>';
        $("#tablaCamp2Credito").html(tabla);
    }

